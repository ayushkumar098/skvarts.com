<body>
    <h1>Gallery Image Update</h1>

    <div class="thatClass">
        <form action="/galleryUpdate" method="post">
            <div>
                <label for="name">Image Title</label>
                <input type="text" id="name" placeholder="Name" name="name" required>
                <br><br>
                <label for="field">Select the field you want to update</label>
                <select name="field" id="field">
                    <option value="name">Name</option>
                    <option value="size">Size</option>
                    <option value="priority">Priority</option>
                </select>
                <br><br>
                <label for="newVal">Enter New Value</label>
                <input type="text" id="newVal" placeholder="New Value" name="newVal" required>
            </div>
            <div>
                <br>
                <button type="submit">Submit</button>
            </div>
        </form>
    </div>

</body>
