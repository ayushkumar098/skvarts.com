<%- include("partials/header", {title: title }); -%>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/css/cartStyle.css">
<section class="cart-section">
  <main id="cart" style="max-width:960px">
    <h1>Your Cart</h1>
    <div class="container-fluid">
      <div class="row align-items-start">
        <div class="col-12 col-sm-8 items">
          <% let total = 0; %>
          <% items.forEach(function(item){ %>
          <!--1-->
          <div class="cartItem row align-items-start">
            <div class="col-3 mb-2">
              <img src="data:image/<%=images.find(o => o.id === item.id).image.contentType%>;base64,
              <%=images.find(o => o.id === item.id).image.data.toString('base64')%>">
            </div>
            <div class="col-5 mb-2">
              <p class=""><%= item.name %></p>
              <h6 class="pl-1 mb-0"> <%= item.type %></h6>
              <h6 class="pl-1 mb-0">Size: <%= item.size %></h6>
              <!-- <h5 class="pl-1 mb-0">Price: C$<%= item.price %></h5> -->
            </div>
            <div class="col-2" >
              <form action="/deletefromcart" method="POST" >
                <button class="remove-btn" id="<%= item.id %>" type="submit" name="id" value="<%= item.id %>">Remove</button>
              </form>
            </div >
            <div class="col-2">
              <p id="cartItem1Price">C$<%= item.price %></p>
            </div>
          </div>
          <hr>
          <% total = total + item.price; %>
          <% }) %>
        </div>
        <div class="col-12 col-sm-4 p-3 proceed form">
          
          <div class="row mx-0 mb-2">
            <div class="col-sm-8 p-0 d-inline">
              <h5>TOTAL</h5>
            </div>
            <div class="col-sm-4 p-0">
              <h5 id="total">C$ <%= total %></h5>
            </div>
          </div>
          <a href="/create-checkout-session"><button id="btn-checkout" class="shopnow"><span>Checkout</span></button></a>
        </div>
      </div>
    </div>
    </div>
  </main>
</section>



<%- include('partials/footer'); -%>
