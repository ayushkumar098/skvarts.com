<%- include("partials/header", {title: title }); -%>
<head>
    <style>
        .flex-center{
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        .this {
            height: 72vh;
            width: 100%;
        }
        .this h1{
            font-size: 5rem;
        }
        .this h2{
            padding: 3% 15%;
        }
        .this button{
            padding: 0.5rem 1rem;
            border-radius: 10px;
            background: #f44336;
            transition: all 0.2s ease-in-out;
            color: white;
        }
        .this button:hover{
            transform: scale(1.1);
        }
        
        @media only screen and (max-width: 800px){
            .this h1{
                font-size: 4rem;
            }
        }
        @media only screen and (max-width: 650px){
            .this h1{
                font-size: 3rem;
            }
            .this h2{
                font-size: 99%;
            }
        }
        @media only screen and (max-width: 650px){
            .this h1{
                font-size: xx-large;
            }
        }
        @media only screen and (max-width: 320px){
            .this h1{
                font-size: x-large;
            }
            .this h2{
                font-size: 0.8rem;
                padding: 5% 15%;
            }
        }
    </style>
</head>
<section>
    <div class="this flex-center">
        <h1>Your Cart is Empty</h1>
        <h2>Add paintings to your cart</h2>
        <a href="/shopCategory"><button>GO TO SHOP</button></a>
    </div>
    
</section>
<%- include('partials/footer'); -%>