<%- include("partials/header", {title: title }); -%>

<section class="shopSection">
    <div class="container">
        <div class="heading">
            <h3><span id="title"><%= title%></span></h3>
        </div>

        <div class="box">
            <% items.forEach(function(image){ %>
            <div class="frame">
                <div class="photo">
                    <a href="/images/<%=image.type%>/<%= image.name %>">
                    <img  src="data:image/<%=image.img.contentType%>;base64,
                     <%=image.img.data.toString('base64')%>">
                    </a>
                </div>
                
                <div class="info">
                    <div class="details">
                        <h4><%= image.name.toUpperCase() %></h4>
                        
                    </div>
                    <div>
                        <h5>C$ <%= image.priceInfo[0].price %></h5>
                    </div>
                    <% if(image.stock <= 0){ %>
                    <div>
                        <h4 style="color:red">SOLD</h4>
                    </div>
                    <% } %>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</section>


<%- include('partials/footer'); -%>