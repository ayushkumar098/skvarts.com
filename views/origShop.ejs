<%- include("partials/header", {title: title }); -%>

<div class="container">
        <div class="heading">
            <h3><span id="title"><%= title%></span></h3>
        </div>

        <div class="box">
            <% items.forEach(function(image){ %>
            <div class="frame">
                <div class="photo">
                    <a href="/images/<%= image.name %>">
                    <img  src="data:image/<%=image.img.contentType%>;base64,
                     <%=image.img.data.toString('base64')%>">
                    </a>
                </div>
                
                <div class="info">
                    <div class="details">
                        <h4><%= image.name %></h4>
                        
                    </div>
                    <div>
                        <h5>C$ <%= image.price %></h5>
                    </div>
                    <!-- <div class="cart" id="cart" onclick="updateCart()">
                        <i class="fa fa-plus"></i>
                        <span>CART</span>
                    </div> -->
                </div>
            </div>
            <% }) %>
        </div>
    </div>

<script>
    let title = document.getElementById('title');
    title.innerHTML = title.innerHTML.slice(0,1).toUpperCase() + title.innerHTML.slice(1);
    if (title.innerHTML == 'Color'){
        title.innerHTML = 'Colour';
    }
</script>



